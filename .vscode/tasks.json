{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "ada: Build active file",
            "type": "shell",
            "command": "gnatmake",
            "args": [
                "${file}",
                "-o", "${fileBasenameNoExtension}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        }
    ]
}
